{% block title %}Uwagi i pochwały ucznia{% endblock %}
{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center my-3">Uwagi i pochwały ucznia</h1>

    {% if schoolNote is not empty %}
	<table class="table table-hover table-light border border-dark">
	    <thead class="thead-dark">
	    <tr>
		<th>Treść</th>
		<th>Nauczyciel</th>
	    </tr>
	    </thead>
	    <tbody> 
	    {% for note in schoolNote %}
		<tr>
		    <td>{{note.tresc}}</td>
		    <td>{{note.nauczyciel.nazwisko}}</td>
		</tr>
	    {% endfor %}
	    </tbody>
	</table>
    {% else %}
	<div class="alert alert-info">Brak uwag i pochwał.</div>
    {% endif %}
{% endblock %}